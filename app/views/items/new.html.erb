<div class='content'>
  <div id="search-box">
    <%= form_tag(new_item_path, method: :get) do %>
        <%= text_field_tag :item, "",  id: "items_new", name: "keyword", placeholder: "キーワードを打ち込んでください", style: "width: 200px;"%>
        <button title="検索" type="submit">検索</button><br>
    <% end %><br>
    <%= form_tag(new_item_path, method: :get) do %>
        <%= text_field_tag :item, "",  id: "items_new", name: "isbn", placeholder: "ISBNを打ち込んでください", style: "width: 200px;"%>
        <button title="検索" type="submit">isbn検索</button>
    <% end %>
  </div><br>
  <h2>検索結果</h2>
  <div id='book_list'>
    <!-- コメントアウトしておく -->
    <%= render partial: 'item_list' %>
  </div>
</div>